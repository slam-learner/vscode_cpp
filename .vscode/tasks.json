{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build_debug",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "mkdir -p build/debug && cd build/debug && cmake -DCMAKE_BUILD_TYPE=DEBUG ../.. && make -j4"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "build_release",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "mkdir -p build/release && cd build/release && cmake -DCMAKE_BUILD_TYPE=RELEASE ../.. && make -j4"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}